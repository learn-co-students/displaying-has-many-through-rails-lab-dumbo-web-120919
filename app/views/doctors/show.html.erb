<h3><%= @doctor.name %></h3>
<h3><%= @doctor.department %></h3>

<br>

<% @doctor.appointments.each do |appt| %>
  <% @doc_patient = @doctor.patients.find(appt.patient_id) %>

  <h3><%= link_to @doc_patient.name, patient_path(@doc_patient) %></h3>
  <h4><%= link_to appt.appointment_datetime.strftime("%B %d, %Y at %k:%M"), appointment_path(appt) %></h4> <br>
<% end %>
